<?xml version="1.0"?>
<ruleset name="Todo API">
  <description>PHPCS ruleset for Todo API (PSR12)</description>
  <rule ref="PSR12"/>

  <file>src</file>
  <file>public</file>

  <rule ref="PSR12">
    <exclude name="Generic.Files.LineLength"/>
  </rule>

  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>logs/*</exclude-pattern>
  <exclude-pattern>migrations/*</exclude-pattern>
</ruleset>
